= form_for(@group) do |f|
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label "グループ名" , class: "chat-group-form__label"
    .chat-group-form__field--right
      = f.text_field :name, placeholder: 'グループ名を入力してください', id: 'chat_group_name', class: 'chat-group-form__input' , autofocus: true

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label "チャットメンバーを追加" , class: "chat-group-form__label"
    .chat-group-form__field--right
      = text_field_tag :keyword, "", placeholder: "追加したいユーザー名を入力してください", class: "chat-group-form__input search_users clearfix"
      %ul#user-search-result.chat-group-user

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label "チャットメンバー" , class: "chat-group-form__label"
    .chat-group-form__field--right
      %ul#chat_users.chat-group-user
        %li.clearfix
          .chat-group-user__name
            = current_user.name
          = hidden_field_tag "group[user_ids][]", current_user.id
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit "Save", class: "chat-group-form__action-btn", id: "save"
